<% if book.favorited_by?(current_user) %>
 <%= link_to book_favorite_path(book), method: :delete do %>
  <i class="fas fa-heart" aria-hidden="true"><%= book.favorites.count %></i> 
 <% end %>
<% else %>
 <%= link_to book_favorite_path(book), method: :post, style: "color: red;" do %>
  <i class="fas fa-heart" aria-hidden="true"><%= book.favorites.count %></i>
 <% end %>
<% end %>
